                    <i class="fas fa-home"></i>
                    <span>Inicio</span>
                </a>
            </li>
            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" href="@(Session["TipoUsuario"] != null ? (Session["TipoUsuario"].ToString().Equals("F") ? (@Url.Content("~/MEDICAMENTO/Create")) : (string.Empty)) : string.Empty)">
