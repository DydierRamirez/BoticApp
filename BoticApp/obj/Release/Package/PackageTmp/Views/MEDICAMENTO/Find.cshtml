
@{

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Consulta Medicamento</h1>
    </div>
    <!-- Content Row -->
    <div class="row">
        @Html.Hidden("ID_MEDICAMENTO")
        <div class="col-sm-6">
            <div class="form-group">
                <label>Medicamento</label>
                <div class="input-group md-form form-sm form-1 pl-0">
                    <div class="input-group-prepend">
                        <span class="input-group-text purple lighten-3" id="basic-text1">
                            <i class="fas fa-search text-white"
                               aria-hidden="true"></i>
                        </span>
                    </div>
                    <input class="form-control my-0 py-1 autocomplete" id="autocomplete" type="text" placeholder="Search" aria-label="Search">@*flexdatalist*@
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Cantidad</label>

            </div>
        </div>
    </div>
    <!-- Content Row -->
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Cantidad</label>
                <input class="form-control" type="text" placeholder="1">
            </div>
        </div>

    </div>
    <!-- Content Row -->
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group text-center">
                @Html.ActionLink("Buscar", "Farmacias", "MEDICAMENTO", new { id = 1 }, null)
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group text-center">
                <button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                    Limpiar
                </button>
            </div>
        </div>
    </div>
    <hr class="sidebar-divider d-none d-md-block">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group text-center">
                <p class="h3">Información de Medicamentos</p>
            </div>
        </div>

    </div>
    @if (ViewBag.Farmacias != null)
    {
        foreach (var item in ViewBag.Farmacias)
        {
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Farmacia</label>
                        <input class="form-control" type="text" placeholder="" value="@item.RAZON_SOCIAL">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Dirección</label>
                        <input class="form-control" type="text" placeholder="" value="@item.DIRECCION">
                    </div>
                </div>
            </div>
        }
    }
</div>
    <!-- /.container-fluid -->
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}
